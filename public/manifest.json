{
   "name": "WalletChat",
   "description": "A better way to communicate in web3",
   "version": "1.4.1",
   "manifest_version": 3,
   "action": {
      "default_popup": "index.html",
      "default_title": "Open the popup"
   },
   "permissions": ["contextMenus", "notifications", "storage", "tabs"],
   "icons": {
      "512": "logo512.png"
   },
   "background": {
      "service_worker": "./static/js/background.js"
   },
   "content_scripts": [
      {
         "matches": ["<all_urls>"],
         "js": ["./static/js/content.js"]
      }
   ],
   "web_accessible_resources": [
      {
         "resources": ["modal.html"],
         "matches": [
            "*://*.looksrare.org/*",
            "*://*.x2y2.io/*",
            "*://*.opensea.io/*"
         ]
      }
   ],
   "devtools_page": "index.html"
}
